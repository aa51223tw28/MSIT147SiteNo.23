
@{
    ViewData["Title"] = "DataTables";
}

<h1>DataTables</h1>
<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>產品編號</th>
            <th>產品名稱</th>
            <th>產品價格</th>
            <th>庫存量</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>產品編號</th>
            <th>產品名稱</th>
            <th>產品價格</th>
            <th>庫存量</th>
        </tr>
    </tfoot>
</table>
@section Scripts{
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        new DataTable('#example', {
            ajax: 'https://localhost:7070/api/Products/DataTables',//呼叫API
            columns: [
                { data: 'productId' },
                { data: 'productName' },
                { data: 'unitPrice' },
                { data: 'unitsInStock' }
            ]
        });

    </script>
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <style></style>
}
